<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.pvt.tracker.model" auto-import="false" catalog="tracker_db">
    <class name="AbstractEntity" table="AbstractEntity">
        <id name="id" type="int" column="F_ID">
            <generator class="increment"/>
        </id>
        <property name="name" column="F_NAME" type="string"/>
        <property name="createdAt" column="F_CREATED_AT" type="Timestamp"/>
        <property name="updatedAt" column="F_CREATED_AT" type="Timestamp"/>
        <bag name="modelTypes">
            <one-to-many></one-to-many>
        </bag>

        <union-subclass name="" table="User">
            <property name="surname" column="F_SURNAME" type="string"/>
            <property name="login" column="F_LOGIN" type="string"/>
            <property name="password" column="F_PASSWORD" type="string"/>
            <property name="email" column="F_EMAIL" type="string"/>
            <property name="skype" column="F_SKYPE" type="string"/>

        </union-subclass>
    </class>
</hibernate-mapping>


